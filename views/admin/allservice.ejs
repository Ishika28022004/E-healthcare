<%- include('partial/header') %>
      <div class="container-fluid">
        <div class="row">
      <%- include('partial/sidebar') %>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <h1>All Service</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Image</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for (let i = 0; i < service.length; i++) { %>
                            <tr>
                              <th scope="row"><%= service[i].id %></th>
                              <td><%= service[i].name %></td>
                              <td><%= service[i].description %></td>
                              <td><%= service[i].price %></td>
                              <td><img src="/uploads/service/<%= service[i].image %>" width="50" height="50"></td>
                              <td><a href="/admin/deleteservice/<%= service[i].id %>" class="btn btn-danger">Delete</a></td>
                            </tr>
                          <% } %>
                        </tbody>  
                    </table>
                </div>
            </div>
        </div>
    </div>
      </div>
      <div class="row fixed-top">
        <span class="mr-auto"></span>
        <div class="col-lg-3 ">
          <% if (msg) { %>
            <div class="alert alert-danger alert-dismissible fade show " role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
              </button>
              <strong><%= msg %></strong>
            </div>
          <% } %>
        </div>
      </div>
      <script>
        $(document).ready(function() {
          // show the alert
          setTimeout(function() {
              $(".alert").alert('close');
          }, 2000);
      });
      </script>    
 <%- include('partial/footer') %>