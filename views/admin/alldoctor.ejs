<%- include('partial/header') %>
      <div class="container-fluid">
        <div class="row">
      <%- include('partial/sidebar') %>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <h1>All Doctor</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped">
                        <thead>
                          <tr>

                            <th scope="col">Doctor Id</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Specialization</th>
                            <th scope="col">Userid</th>
                            <th scope="col">Password</th>
                            <th scope="col">Serviceid</th>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0;i< doctor.length;i++){ %>
                            <tr>
                                <th scope="row"><%= doctor[i]._id %></th>
                                <td><img src="/uploads/doctor/<%= doctor[i].image %>" width="50" height="50"></td>
                                <td><%= doctor[i].name %></td>
                                <td><%= doctor[i].email %></td>
                                <td><%= doctor[i].phone %></td>
                                <td><%= doctor[i].speciality %></td>
                                <td><%= doctor[i].userid %></td>
                                <td><%= doctor[i].password %></td>
                                <td>
                                  <% for(var j=0;j< service.length;j++){ %>
                                    <% if(doctor[i].serviceid==service[j]._id){ %>
                                      <%= service[j].name %>
                                    <% } %>
                                  <% } %>
                                
                                </td>
                                <td><%= doctor[i].date %></td>
                                <td><%= doctor[i].time %></td>
                                <td><a href="/admin/deletedoctor/<%= doctor[i].id %>" class="btn btn-danger">Delete</a></td>
                            </tr>
                            <% } %>
                        </tbody>
                </div>
            </div>
        </div>
    </div>
      </div>
      <div class="row fixed-top">
        <span class="mr-auto"></span>
        <div class="col-lg-3 ">
          <% if (msg) { %>
            <div class="alert alert-danger alert-dismissible fade show " role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
              </button>
              <strong><%= msg %></strong>
            </div>
          <% } %>
        </div>
      </div>
      <script>
        $(document).ready(function() {
          // show the alert
          setTimeout(function() {
              $(".alert").alert('close');
          }, 2000);
      });
      </script>    
 <%- include('partial/footer') %>